{
  "metadata": {
    "site": {
      "title": "Metalsmith Boilerplate",
      "description": "",
      "keywords": "",
      "author": "https://sowlmate.de",
      "url": "https://example.foo",
      "sitemap": "https://example.foo/sitemap.xml"
    },
    "google_tag_manager_id": "GTM-XXXXXXX"
  },
  "build": {

  },
  "source": "./src",
  "destination": "./dist",
  "assets": {
    "globs": {
      "css": [
        "./src/_scss/**/*.scss",
        "./src/css/**/*.css"
      ],
      "vendor": [
        "./src/vendor/**/*.js"
      ],
      "scripts": [
        "./src/js/*.js"
      ]
    },
    "bin": {
      "css": "./src/bin",
      "js": "./src/bin"
    },
    "minified": {
      "css": "css.min.css",
      "js": "js.min.js",
      "vendor": "vendor.min.js",
      "bundle": "bundle.min.js"
    }
  }
}

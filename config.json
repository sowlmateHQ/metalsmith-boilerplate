{
  "metadata": {
    "site": {
      "title": "Metalsmith Boilerplate",
      "description": "",
      "keywords": "",
      "author": "https://sowlmate.de",
      "url": "https://example.com"
    },
    "google_tag_manager_id": "GTM-XXXXXXX"
  },
  "seo": {
    "sitemap": "https://example.com/sitemap.xml",
    "redirect": {}
  },
  "build": {
    "source": "./src",
    "destination": "./dist",
    "cache_busting": [
      "bin/css.min.css",
      "bin/vendor.min.js"
    ],
    "assets": {
      "source": "./public",
      "destination": "./"
    }
  },
  "test": {
    "linksToIgnore": [
      "http://www.sowlmate.de"
    ]
  },
  "assets": {
    "globs": {
      "css": [
        "./src/_scss/**/*.scss",
        "./src/css/**/*.css"
      ],
      "vendor": [
        "./src/vendor/**/*.js"
      ],
      "scripts": [
        "./src/js/*.js"
      ]
    },
    "bin": {
      "css": "./public/bin",
      "js": "./public/bin"
    },
    "minified": {
      "css": "css.min.css",
      "js": "js.min.js",
      "vendor": "vendor.min.js",
      "bundle": "bundle.min.js"
    }
  }
}
